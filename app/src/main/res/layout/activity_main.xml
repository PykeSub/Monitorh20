<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_btn_servo_abierta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="servoAbierta"
        android:text="Servo Abierta"/>

    <Button
        android:id="@+id/main_btn_servo_cerrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="servoCerrada"
        android:layout_below="@id/main_btn_servo_abierta"
        android:text="Servo Cerrada"/>
    
    <TextView
        android:id="@+id/main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn_servo_cerrada"
        android:text="Texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>



</RelativeLayout>




